{
  "name": "@rapidraptor/auth",
  "version": "1.0.2",
  "private": true,
  "type": "module",
  "description": "Unified authentication library for session management and token expiration handling",
  "workspaces": [
    "packages/shared",
    "packages/client",
    "packages/server"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:shared": "npm run build --workspace=@rapidraptor/auth-shared",
    "build:client": "npm run build --workspace=@rapidraptor/auth-client",
    "build:server": "npm run build --workspace=@rapidraptor/auth-server",
    "test": "npm run build:shared && vitest",
    "test:watch": "npm run build:shared && vitest --watch",
    "test:coverage": "npm run build:shared && vitest --coverage",
    "test:integration": "npm run build:shared && npm run build:server && VITEST_INTEGRATION=true vitest run __tests__/integration",
    "test:integration:watch": "npm run build:shared && npm run build:server && vitest watch __tests__/integration",
    "emulator:start": "firebase emulators:start --only auth,firestore --project test-project",
    "emulator:stop": "pkill -f 'firebase.*emulators' || true",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "version:bump": "node scripts/version-bump.js",
    "version:check": "node scripts/version-check.js",
    "version:sync": "node scripts/check-version-sync.js",
    "prepublishOnly": "npm run build && npm test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "firebase": "^11.0.0",
    "firebase-tools": "^13.0.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "standard-version": "^9.5.0",
    "supertest": "^7.0.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
